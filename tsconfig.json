{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "lib": [
      "es2015",
      "esnext"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true
  },
  "exclude": [
    "remotion.config.ts"
  ]
}